<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<script type="text/javascript" src="address.js"></script>  
			<script>
			/*
				1. 确认事件: 表单提交事件 onsubmit事件 
				2. 事件所要触发的函数: checkForm
				3. 函数中的验证
					1.校验用户名, 长度为10位
					2.校验密码，密码长度要大于6位
					3.校验手机
					4.校验邮箱
			*/
			function checkForm(){
				
				//获取用户名输入项
				var inputObj = document.getElementById("stuNum");
				//获取输入项的值
				var uValue = inputObj.value;

				//用户名长度需要是10位数字 
				if(uValue.length != 10 ){
					alert("对不起,您的学号应为十位数字组成!");
					return false;	
				}
				
				//密码长度需要大于6位 和确认必须一致
				//获取密码框输入的值
				var input_password = document.getElementById("password1");
				var uPass = input_password.value;
				
				if(uPass.length < 6){
					alert("对不起,您输入的密码少于6位数!");
					return false;
				}
				
				//获取确认密码框的值
				var input_repassword = document.getElementById("password2");
				var uRePass = input_repassword.value;
				if(uPass != uRePass){
					alert("对不起,两次输入的密码不一致!");
					return false;
				}
				
				//校验手机号
				var input_mobile = document.getElementById("phoneNum");
				var uMobile = input_mobile.value;
				//
				if(!/^[1][3578][0-9]{9}$/.test(uMobile)){
					alert("对不起,您输入的手机号不正确!");
					return false;
				}
				
				//校验邮箱: /^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(\.[a-zA-Z0-9_-])+/
				var inputEmail = document.getElementById("email");
				var uEmail = inputEmail.value;
				
				if(!/^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+(\.[a-zA-Z0-9_-])+/.test(uEmail)){
					alert("对不起,您输入的邮箱地址不合法");
					return false;
				}			
				return true;
			}	
		</script>
		<title></title>
	</head>

	<body>
		
		<table  align="center" border="1">
			<form action = "process.jsp" method="post" onsubmit="return checkForm()">
				
